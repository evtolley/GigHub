@model GigHub.ViewModels.GigFormViewModel

@{
    ViewBag.Title = Model.Heading;
}

<h2>@Model.Heading</h2>

@using (Html.BeginForm(Model.Action, "Gigs", FormMethod.Post))
{
<p class="alert alert-info">All fields are <strong>required.</strong></p>
    @Html.AntiForgeryToken();
    @Html.HiddenFor(x => x.Id)

    <div class="form-group">
        @Html.LabelFor(x => x.Venue)
        @Html.TextBoxFor(x => x.Venue, new { @class = "form-control", autofocus="autofocus" })
        @Html.ValidationMessageFor(x => x.Venue)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Date)
        @Html.TextBoxFor(x => x.Date, new { @class = "form-control", placeholder="eg 1 Jan 2016" })
        @Html.ValidationMessageFor(x => x.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Time)
        @Html.TextBoxFor(x => x.Time, new { @class = "form-control", placeholder = "eg 20:00" })
        @Html.ValidationMessageFor(x => x.Time)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Genre)
        @Html.DropDownListFor(x => x.Genre, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Genre)
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn">Save</button>
    </div>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

